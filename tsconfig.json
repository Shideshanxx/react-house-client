{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "src",
    "strict": true,
    "paths": {
      "@/hooks": ["hooks/index"],
      "@/components": ["components/index"],
      "@/utils": ["utils/index"],
      "@/enums": ["enums/index"],
      "@/skeletons": ["skeletons/index"]
    },
    "allowSyntheticDefaultImports": true
  }
}
